#include <stdio.h>

int inventario = 300;  // inventario inicial

// Registrar entrada
void registrarEntrada() {
    int cantidad;
    printf("\nIngrese cantidad de huevos que ingresan: ");
    scanf("%d", &cantidad);

    if (cantidad > 0) {
        inventario += cantidad;
        printf("Entrada registrada. Inventario actual: %d\n", inventario);
    } else {
        printf("Cantidad invalida.\n");
    }
}

// Registrar venta
void registrarVenta() {
    int cantidad;
    printf("\nIngrese cantidad de huevos a vender: ");
    scanf("%d", &cantidad);

    if (cantidad > 0 && cantidad <= inventario) {
        inventario -= cantidad;
        printf("Venta realizada. Inventario restante: %d\n", inventario);
    } else {
        printf("Cantidad invalida o inventario insuficiente.\n");
    }
}

// Ver inventario
void mostrarInventario() {
    printf("\nInventario disponible: %d huevos\n", inventario);
}

// MenÃº principal
int main() {
    int opcion;

    do {
        printf("\n===== EGGCONTROL - INVENTARIO =====\n");
        printf("1. Registrar entrada\n");
        printf("2. Registrar venta\n");
        printf("3. Ver inventario\n");
        printf("4. Salir\n");
        printf("Seleccione una opcion: ");
        scanf("%d", &opcion);

        switch (opcion) {
            case 1:
                registrarEntrada();
                break;
            case 2:
                registrarVenta();
                break;
            case 3:
                mostrarInventario();
                break;
            case 4:
                printf("Saliendo del sistema...\n");
                break;
            default:
                printf("Opcion no valida.\n");
        }

    } while (opcion != 4);

    return 0;
}